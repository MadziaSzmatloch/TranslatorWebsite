@using Azure.AI.Translation.Text
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
@{
    ViewData["Title"] = "Home Page";
    @model IReadOnlyDictionary<string, TranslationLanguage>;
}

<div class="container">
        <div class="input_container">
        <select id="input_language">
            <option value="null">Autodetect</option>
            @foreach (var lang in Model)
            {
                <option value="@lang.Key">@lang.Value.Name</option>
            }
            </select>
            <textarea id="input" class="source_text" placeholder="text to translate"></textarea>
        </div>
        <button class="switch_language_btn" onclick="switchLanguages()"><img src="~/images/invert.png" /></button>
        <div class="input_container">
        <select id="target_language">
                @foreach(var lang in Model)
                {
                    <option value="@lang.Key">@lang.Value.Name</option>
                }
            </select>
        <textbox id="output" class="output_text"></textbox>
        </div>
</div>

<script>
    function translate(){
        var input = $("#input").val();
        var sourceLang = $("#input_language").val();
        var targetLang = $("#target_language").val();
        $.ajax({
            type: "POST",
            url: "/Home/Translate",
            data: 
            {
                input : input,
                sourceLang: sourceLang,
                targetLang: targetLang,
            },
            success: function (response) {
                $("#output").text(response)
            },
            error: function (error) {
                console.log(error)
            }
        })
    }

    $("#input").on("input", function () {
        translate();
    })

    $("#input_language").on("change", function () {
        translate();
    });

    $("#target_language").on("change", function () {
        translate();
    });

    function switchLanguages() {
        var inputLanguage = $("#input_language").val();
        var targetLanguage = $("#target_language").val();

        $("#input_language").val(targetLanguage);
        $("#target_language").val(inputLanguage);
        translate();
    }
</script>
